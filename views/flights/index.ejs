<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Flights List</title>
</head>

<body>
    <nav>
        <a href="/">Home</a> |
        <a href="/flights">ALL FLIGHTS</a> |
        <a href="/flights/new">ADD FLIGHT</a> |
    </nav>
    <main>
    <h1>List of Flights</h1>
    <table>
        <thead>
            <th>Airline</th>
            <th>Flight #</th>
            <th>Departs</th>
            <th></th>
        </thead>
        <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.flightNo %></td>
            <% if(new Date(f.departs).setHours(0,0,0,0) < new Date().setHours(0,0,0,0)) { %>
            <td style="color:red"><%= f.departs %></td>
            <% } else { %>
            <td><%= f.departs %></td>
            <% } %>
            <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</main>
</body>

</html>